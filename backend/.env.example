# Database Configuration
DATABASE_URL=postgresql://oneka_user:your_password_here@localhost:5432/oneka_dev
DATABASE_TEST_URL=postgresql://oneka_user:your_password_here@localhost:5432/oneka_test

# Application Configuration
APP_NAME=ONEKA AI API
DEBUG=True
ENVIRONMENT=development
API_VERSION=1.0.0

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# AWS Configuration (for future sprints)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=oneka-satellite-tiles

# Copernicus Data Space (Satellite Data)
COPERNICUS_USERNAME=your_copernicus_username
COPERNICUS_PASSWORD=your_copernicus_password

# Redis (Task Queue)
REDIS_URL=redis://localhost:6379/0

# Google Maps API (for 3D Tiles)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Data Sources
PPIP_BASE_URL=https://tenders.go.ke
KMHFL_API_URL=http://kmhfl.health.go.ke/api

# Logging
LOG_LEVEL=INFO
